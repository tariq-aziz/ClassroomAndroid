<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aziz.tariq.classroom">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:noHistory="true" android:excludeFromRecents="true">
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".JoinClassroomActivity" />
        <activity android:name=".CreateClassroomActivity" />
        <activity android:name=".DetailedClassroomActivity"
                android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>